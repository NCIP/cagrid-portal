<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9 http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">


    <changeSet id="1" author="kherm">
        <tagDatabase tag="version_2.1"/>
    </changeSet>

    <changeSet id="2" author="kherm">
        <preConditions onFail="MARK_RAN">
            <not>
            <columnExists tableName="status_change" columnName="archived"/>
            </not>
        </preConditions>
        <addColumn tableName="status_change">
            <column name="archived" type="bit">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="3" author="kherm">
        <tagDatabase tag="version_2.2"/>
    </changeSet>

    <!--bug fix-->
     <changeSet id="3b" author="kherm">
        <preConditions onFail="CONTINUE">
            <sqlCheck expectedResult="1">SELECT COUNT(1) FROM grid_services WHERE url = 'http://huggins.med.virginia.EDU:18080/wsrf/services/cagrid/CaArraySvc'</sqlCheck>
        </preConditions>
        <sql>update grid_services set url='http://huggins.med.virginia.edu:18080/wsrf/services/cagrid/CaArraySvc' where url='http://huggins.med.virginia.EDU:18080/wsrf/services/cagrid/CaArraySvc'</sql>
    </changeSet>



</databaseChangeLog>
