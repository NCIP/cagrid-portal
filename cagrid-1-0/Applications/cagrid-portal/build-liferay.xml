    		url="${liferay.db.url}"
    		userid="${liferay.db.username}"
    		password="${liferay.db.password}"
    		src="portals/liferay/src/sql/portal-data.sql"
		>
			<classpath>
				<pathelement location="${liferay.db.driver.path}"/>
			</classpath>
		</sql>
	</target>
	
</project>