<mobius>
	<resource name="mobiusConfig" class="org.projectmobius.services.common.MobiusConfiguration">
		<mobius-configuration>
			<MobiusNetworkServiceDescriptor serviceType="MAKO" hostname="localhost">
				<serviceIdentifier serviceId="localhost"/>
				<ports>
					<port protocol="TCP" portNumber="3940"/>
				</ports>
				<aliases/>
			</MobiusNetworkServiceDescriptor>
			<handlers>
				<handler name="SubmitSchemaRequest" class="org.projectmobius.services.vmako.handlers.SubmitSchemaHandlerImpl"/>
				<handler name="SubmitXMLRequest" class="org.projectmobius.services.vmako.handlers.SubmitXMLHandlerImpl"/>
				<handler name="RetrieveXMLRequest" class="org.projectmobius.services.vmako.handlers.RetrieveXMLHandlerImpl"/>
				<handler name="XPathRequest" class="org.projectmobius.services.vmako.handlers.XPathRequestHandlerImpl"/>
				<handler name="CreateCollectionRequest" class="org.projectmobius.services.vmako.handlers.CreateCollectionHandlerImpl"/>
				<handler name="RemoveCollectionRequest" class="org.projectmobius.services.vmako.handlers.RemoveCollectionHandlerImpl"/>
				<handler name="RemoveXMLRequest" class="org.projectmobius.services.vmako.handlers.RemoveXMLHandlerImpl"/>
				<handler name="CollectionListRequest" class="org.projectmobius.services.vmako.handlers.CollectionListHandlerImpl"/>
				<handler name="ServiceDataRequest" class="org.projectmobius.services.common.handlers.DefaultServiceDataRequestHandler"/>
				<handler name="StopRequest" class="org.projectmobius.services.common.handlers.DefaultStopRequestHandler"/>
				<handler name="SchemaListRequest" class="org.projectmobius.services.vmako.handlers.SchemaListHandlerImpl"/>
				<handler name="XPathRemoveRequest" class="org.projectmobius.services.vmako.handlers.XPathRemoveHandlerImpl"/>
			</handlers>
			<gridServiceFactories>
				<gridServiceFactory name="default" isDefault="true" class="org.projectmobius.common.servicefactory.NetworkServiceFactory"/>
			</gridServiceFactories>
			<serviceRegistry serviceId="localhost" registryClass="org.projectmobius.client.common.DefaultRegistry"/>
		</mobius-configuration>
	</resource>
	<resource name="makoConfig" class="org.projectmobius.services.mako.MakoConfiguration">
		<mako-configuration>
		</mako-configuration>
	</resource>
	<resource name="vmakoConfig" class="org.projectmobius.services.vmako.VMakoConfiguration">
		<vmako-configuration>
			<vmako-storage file="/home/langella/projects/mobius/conf/mako/vmako-cache-example.xml"/>
			<ingestor class="org.projectmobius.services.vmako.ingestors.RoundRobinIngestor"/>
		</vmako-configuration>
	</resource>
</mobius>
