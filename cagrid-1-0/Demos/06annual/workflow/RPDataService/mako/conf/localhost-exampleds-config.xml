<mobius>
	<resource name="mobiusConfig" class="org.projectmobius.services.common.MobiusConfiguration">
		<mobius-configuration>
			<MobiusNetworkServiceDescriptor serviceType="MAKO" hostname="localhost">
				<serviceIdentifier serviceId="MAKO://localhost"/>
				<ports>
					<port protocol="TCP" portNumber="3940"/>
				</ports>
				<aliases/>
			</MobiusNetworkServiceDescriptor>
			<handlers>
				<handler name="ServiceDataRequest" class="org.projectmobius.services.common.handlers.DefaultServiceDataRequestHandler"/>
				<handler name="StopRequest" class="org.projectmobius.services.common.handlers.DefaultStopRequestHandler"/>
				<handler name="CollectionListRequest" class="org.projectmobius.example.dataservice.ExampleCollectionListHandler"/>
				<handler name="CreateCollectionRequest" class="org.projectmobius.example.dataservice.ExampleCreateCollectionHandler"/>
				<handler name="RemoveCollectionRequest" class="org.projectmobius.example.dataservice.ExampleRemoveCollectionHandler"/>
				<handler name="SubmitXMLRequest" class="org.projectmobius.example.dataservice.ExampleSubmitXMLHandler"/>
				<handler name="RetrieveXMLRequest" class="org.projectmobius.example.dataservice.ExampleRetrieveXMLHandler"/>
				<handler name="RemoveXMLRequest" class="org.projectmobius.example.dataservice.ExampleRemoveXMLHandler"/>
			</handlers>
			<gridServiceFactories>
				<gridServiceFactory name="default" isDefault="true" class="org.projectmobius.common.servicefactory.NetworkServiceFactory"/>
			</gridServiceFactories>
			<serviceRegistry serviceId="localhost" registryClass="org.projectmobius.client.common.DefaultRegistry"/>
		</mobius-configuration>
	</resource>
	<resource name="makoConfig" class="org.projectmobius.services.mako.MakoConfiguration">
		<mako-configuration>
		</mako-configuration>
	</resource>
	<resource name="ExampleManager" class="org.projectmobius.example.dataservice.ExampleManager">
		<LocalPath>
			<Path>.</Path>
		</LocalPath>
	</resource>
</mobius>
