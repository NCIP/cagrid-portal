<!-- ======================================================================= -->
<!-- caGrid Run Utilities build file                                             -->
<!-- ======================================================================= -->
<project name="caGrid_run_utilities" basedir="." default="usage">
    <target name="usage">
        <echo message="Not to be called directly.  This file contains utilities to be used in other
            build files."/>
    </target>
    <!-- =================================================================== -->
    <!-- Generates all the system files based off templates for a particular platform     -->
    <!-- =================================================================== -->

    <target name="introduce" description="Run the Introduce Grid Service Authoring Toolkit" >
        <ant dir="${basedir}/projects/introduce" antfile="build.xml" target="introduce" inheritall="false" />
    </target>
    
    <target name="dorian" description="Run the Dorian Administrative GUI" >
        <ant dir="${basedir}/projects/dorian" antfile="build.xml" target="portal" inheritall="false" />
    </target>
	
	 <target name="gts" description="Run the GTS Administrative GUI" >
	        <ant dir="${basedir}/projects/gts" antfile="build.xml" target="portal" inheritall="false" />
	  </target>
	
	 <target name="syncWithTrustFabric" description="Syncs With Trust Fabric" >
		        <ant dir="${basedir}/projects/syncgts" antfile="build.xml" target="syncOnce" inheritall="false" />
	</target>
	
	<target name="requestHostCertificate" description="Request a Host Certificate" >
		<ant dir="${basedir}/projects/gridca" antfile="build.xml" target="requestHostCertificate" inheritall="false" />
	</target>

</project>
