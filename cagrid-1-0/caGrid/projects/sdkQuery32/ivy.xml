<?xml version="1.0"?>

<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd">

  <info organisation="caGrid" module="sdkQuery32" revision="${project.version}">
    <license name="caGrid" url="http://www.cagrid.org/mwiki/index.php?title=CaGrid:LICENSE-1.1"/>
    <description>The caCORE SDK 3.2(.1) Query Processor</description>
  </info>

  <configurations>
    <conf name="authz" visibility="private"/>
    <conf name="impl-test" visibility="private"/>

    <!-- Public Configurations-->
    <conf name="default" visibility="public"/>
    <conf name="test" visibility="public" extends="default,impl-test"/>
  </configurations>


  <publications>
    <artifact name="caGrid-${ivy.module}-core" conf="default" type="jar"/>
    <artifact name="caGrid-${ivy.module}-tests" conf="test" type="jar"/>
  </publications>

  <dependencies>
    <dependency rev="latest.integration" org="caGrid" name="core"
      conf="default->default;impl-test->test"/>
    <dependency rev="latest.integration" org="caGrid" name="data"
      conf="default->service;impl-test->cql-examples"/>
    <dependency rev="latest.integration" org="caGrid" name="grape" conf="default->default"/>

    <!-- TODO: note, these currently aren't being copied into services correctly, but I'm maintaining the current behavior... might want to just change this to conf="default->default" -->
    <dependency rev="latest.integration" org="caGrid" name="authz" conf="authz->default"/>

    <dependency rev="3.1.3" org="hibernate" name="hibernate" conf="default->full"/>
  </dependencies>
</ivy-module>
