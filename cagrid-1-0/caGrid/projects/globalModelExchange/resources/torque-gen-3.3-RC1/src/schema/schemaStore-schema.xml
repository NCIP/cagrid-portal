<!DOCTYPE database SYSTEM
 "http://db.apache.org/torque/dtd/database_3_3.dtd">
<database name="schemaStore" defaultIdMethod="native">
	<table name="schema_entity" description="Schemas Table">
		<column name="id" required="true" primaryKey="true" type="INTEGER" description="Schema ID"/>
		<column name="namespace_uri" required="true" size="255" type="VARCHAR" description="Schema Namespace"/>
		<column name="schema_text_id" required="true" type="INTEGER" description="Schema Text"/>
		<unique>
			<unique-column name="namespace_uri"/>
		</unique>
		<foreign-key foreignTable="schema_text">
			<reference local="schema_text_id" foreign="id"/>
		</foreign-key>
	</table>
	<table name="schema_text" description="Schema Texts Table">
		<column name="id" required="true" primaryKey="true" type="INTEGER" description="Schema Text ID"/>
		<column name="schema_text" required="true" type="CLOB" description="Schema Text"/>
	</table>
	<table name="namespace_import_map" description="Namespace Imports Table">
		<column name="id" required="true" primaryKey="true" type="INTEGER" description="Import ID"/>
		<column name="schema_id" required="true" type="INTEGER" description="Schema ID"/>
		<column name="imported_schema_id" required="true" type="INTEGER" description="Imported Schema ID"/>
		<foreign-key foreignTable="schema_entity">
			<reference local="schema_id" foreign="id"/>
		</foreign-key>
		<foreign-key foreignTable="schema_entity">
			<reference local="imported_schema_id" foreign="id"/>
		</foreign-key>
	</table>
</database>
