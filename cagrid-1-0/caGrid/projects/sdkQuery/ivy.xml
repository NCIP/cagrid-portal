<?xml version="1.0"?>

<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd">

  <info organisation="caGrid" module="sdkQuery" revision="${project.version}">
    <license name="caGrid" url="http://www.cagrid.org/mwiki/index.php?title=CaGrid:LICENSE-1.1"/>
    <description>The caCORE SDK 3.1 Query Processor</description>
  </info>

  <configurations>
    <conf name="impl-test" visibility="private"/>

    <!-- Public Configurations-->
    <conf name="default" visibility="public"/>
    <conf name="test" visibility="public" extends="default,impl-test"/>
  </configurations>


  <publications>
    <artifact name="caGrid-${ivy.module}-core" conf="default" type="jar"/>
    <artifact name="caGrid-${ivy.module}-tests" conf="test" type="jar"/>
  </publications>

  <dependencies>
    <dependency rev="latest.integration" org="caGrid" name="core"
      conf="default->default;impl-test->test"/>
    <dependency rev="latest.integration" org="caGrid" name="data" conf="default->service;impl-test->cql-examples"/>
    <dependency rev="latest.integration" org="caGrid" name="dataExtensions" conf="default->default"/>
    <dependency rev="latest.integration" org="caGrid" name="metadata" conf="default->data.jars"/>
    <dependency rev="latest.integration" org="caGrid" name="metadatautils" conf="default->default"/>

    <!-- Extenernal Dependencies -->
    <dependency rev="3.1" org="cacore" name="api" conf="default->*"/>
    <dependency rev="4.4" org="junit" name="junit" conf="impl-test->default"/>
    <dependency rev="2.0.0" org="jgoodies" name="validation" conf="default->default"/>
  </dependencies>
</ivy-module>
