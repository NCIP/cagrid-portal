<project name="run-tools file" basedir="." default="runClient">
    <target name="runClient" depends="checkGlobus, defineClasspaths" description="Run the sample Client">
        <property name="service.url" value="http://localhost:8080/wsrf/services/cagrid/CaDSRService" />
        <echo message="Connecting to service: ${service.url}" />
        <java classname="gov.nih.nci.cagrid.cadsr.client.CaDSRServiceClient" classpathref="run.classpath" fork="no">
            <jvmarg value="-DGLOBUS_LOCATION=${ext.globus.dir}" />
            <sysproperty key="axis.ClientConfigFile" value="${src.dir}/gov/nih/nci/cagrid/cadsr/client/client-config.wsdd" />
            <jvmarg value="-Daxis.ClientConfigFile=${src.dir}/gov/nih/nci/cagrid/cadsr/client/client-config.wsdd" />
            <!--
            <sysproperty key="log4j.debug" value="true" />
            <sysproperty key="log4j.configuration" value="file:\${ext.globus.dir}\log4j.properties" />
            -->
            <arg value="-url" />
            <arg value="${service.url}" />
        </java>
    </target>
	
	<target name="runCadsrModelProblemFinder" depends="checkGlobus, defineClasspaths" description="Runs the caDSR Model Problems finder GUI">
		<java classname="gov.nih.nci.cagrid.cadsr.portal.CadsrModelProblemFinder" fork="yes">
			<classpath refid="run.classpath"/>
			<classpath>
				<pathelement location="${portal.build.dest}"/>
			</classpath>
		</java>
	</target>
</project>