<?xml version="1.0"?>

<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd">

  <info organisation="caGrid" module="metadatautils" revision="${project.version}">
    <license name="caGrid" url="http://www.cagrid.org/mwiki/index.php?title=CaGrid:LICENSE-1.1"/>
    <description>Provides APIs for working with standard caGrid metadata</description>
  </info>

  <configurations>
    <!-- Public Configurations-->
    <conf name="default" visibility="public"/>
    <conf name="test" visibility="public" extends="default"/>
  </configurations>


  <publications>
    <artifact name="caGrid-${ivy.module}" conf="default" type="jar"/>
    <artifact name="caGrid-${ivy.module}-tests" conf="test" type="jar"/>
  </publications>

  <dependencies>
    <dependency org="caGrid" name="core" rev="latest.integration" conf="default->default;test->test"/>
    <dependency org="caGrid" name="metadata" rev="latest.integration" conf="default->jars"/>
    <dependency org="caGrid" name="testing" rev="latest.integration" conf="test->system"/>    

    <dependency org="jasciidammit" name="jasciidammit" rev="1.1" conf="default->default"/>
  </dependencies>
</ivy-module>
