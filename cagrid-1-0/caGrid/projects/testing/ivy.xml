<?xml version="1.0"?>

<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd">

  <info organisation="caGrid" module="testing" revision="${project.version}">
    <license name="caGrid" url="http://www.cagrid.org/mwiki/index.php?title=CaGrid:LICENSE-1.1"/>
    <description>caGrid testing utilities</description>
  </info>

  <configurations>
    <conf name="impl" visibility="private" extends="system"/>
    
    <!-- Public Configurations-->
    <conf name="core" visibility="public"/>
    <conf name="system" visibility="public" extends="core"/>

    <conf name="test" visibility="public" extends="system"/>
  </configurations>


  <publications>
    <artifact name="caGrid-${ivy.module}-core" conf="core" type="jar"/>
    <artifact name="caGrid-${ivy.module}-system" conf="system" type="jar"/>
  </publications>

  <dependencies>
    <dependency org="caGrid" name="core" rev="latest.integration" conf="core->default;test->test"/>

    <dependency rev="1.0" org="jdom" name="jdom" conf="core->*"/>
  </dependencies>
</ivy-module>
