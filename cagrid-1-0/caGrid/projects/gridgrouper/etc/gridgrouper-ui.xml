<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://www.cagrid.org/1/grape"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.cagrid.org/1/grape file:/C:/projects/cagrid-1-0/caGrid/projects/grape/schema/grape.xsd">
    <name>Grid Grouper</name>
    <icon>/caGrid-icon-22x22.gif</icon>
    <ApplicationLogo>/grouper_logo_no_background.png</ApplicationLogo>
    <AboutHTML><![CDATA[<html><h2>Grid Grouper</h2>Provides a group-based authorization solution for the Grid, wherein grid<BR>services and applications enforce authorization policy based on membership<BR> to groups defined and managed at the grid level. Grid Grouper was developed<BR>as part of the caGrid project to meet the needs of the caBIG community.  For<BR>more information on Grid Grouper or caGrid please visit us at:<BR> <A HREF="http://www.cagrid.org">http://www.cagrid.org</a></html>]]></AboutHTML>
    <dimensions>
        <width>1024</width>
        <height>768</height>
    </dimensions>
    <menus>
        <menu>
            <title>Group Management</title>
            <description>Browsing and Administration of groups.</description>
            <showIcons>true</showIcons>
            <components>
                <component>
                    <title>My Groups</title>
                    <description>View the groups in which you are a member of.</description>
                    <classname>gov.nih.nci.cagrid.gridgrouper.ui.mygroups.MyGroupsWindow</classname>
                    <icon>/grouper_logo_no_background_22x22.png</icon>
                    <showOnToolBar>true</showOnToolBar>
                    <dimensions>
                        <width>600</width>
                        <height>400</height>
                    </dimensions>
                </component>
                <component>
                    <title>Group Browser</title>
                    <description>Browsing and Administration of groups.</description>
                    <classname>gov.nih.nci.cagrid.gridgrouper.ui.GroupManagementBrowser</classname>
                    <icon>/grouper_logo_no_background_22x22.png</icon>
                    <showOnToolBar>true</showOnToolBar>
                    <dimensions>
                        <width>1000</width>
                        <height>600</height>
                    </dimensions>
                </component>
            </components>
        </menu>
    </menus>

    <configuration>
        <ConfigurationDescriptors>
            <ConfigurationDescriptor>
                <DisplayName>Group Management</DisplayName>
                <SystemName>gridgrouper</SystemName>
                <ModelClassname>org.cagrid.grape.configuration.GeneralConfiguration</ModelClassname>
                <qname>
                    <namespace>http://www.cagrid.org/1/grape-general-configuration</namespace>
                    <name>GeneralConfiguration</name>
                </qname>
                <ConfigurationPanel>org.cagrid.grape.GeneralConfigurationEditor</ConfigurationPanel>
                <DefaultFile>etc/gridgrouper-ui-configuration.xml</DefaultFile>
            </ConfigurationDescriptor>
        </ConfigurationDescriptors>
    </configuration>
</application>
