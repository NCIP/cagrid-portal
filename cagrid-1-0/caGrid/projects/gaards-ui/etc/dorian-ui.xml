<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://www.cagrid.org/1/grape"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.cagrid.org/1/grape file:/C:/projects/cagrid-1-0/caGrid/projects/grape/schema/grape.xsd">
    <name>Dorian</name>
    <icon>/caGrid-icon-22x22.gif</icon>
     <ApplicationLogo>/dorianSplash.png</ApplicationLogo>
    <AboutHTML><![CDATA[<html><h2>Dorian</h2>Dorian is grid service for the provisioning and management of grid users<BR>accounts.  Dorian provides an integration point between external security<BR>domains and the grid, allowing accounts managed in external domains to be<BR>federated and managed in the grid. Dorian allows users to use their existing<BR>credentials (external to the grid) to authenticate to the grid.  Dorian was<BR>developed as part of the caGrid project to meet the needs of the caBIG<BR> community.  For more information on Dorian or caGrid please visit us at:<BR> <A HREF="http://www.cagrid.org">http://www.cagrid.org</a></html>]]></AboutHTML>
    <dimensions>
        <width>850</width>
        <height>700</height>
    </dimensions>
    <menus>
        <menu>
            <title>Credentials</title>
            <description>tools</description>
            <showIcons>true</showIcons>
            <components>
                <component>
                    <title>Login</title>
                    <description>Obtain Grid Credentials!!!</description>
                    <classname>org.cagrid.gaards.ui.dorian.ifs.CreateProxyWindow</classname>
                    <icon>/login.png</icon>
                    <showOnToolBar>true</showOnToolBar>
                    <dimensions>
                    <width>600</width>
                    <height>350</height>
                    </dimensions>
                </component>
                <component>
                    <title>Credential Manager</title>
                    <description>Allows the management of grid proxy credentials.</description>
                    <classname>org.cagrid.gaards.ui.common.gridca.ui.ProxyManagerComponent</classname>
                    <icon>/certificate.png</icon>
                    <showOnToolBar>true</showOnToolBar>
                    <dimensions>
                        <width>700</width>
                        <height>400</height>
                    </dimensions>
                </component>
                 <component>
                    <title>Request Host Certificate</title>
                    <description>Allows a user to request a host ceritficate from Dorian.</description>
                    <classname>org.cagrid.gaards.ui.dorian.ifs.RequestHostCertificateWindow</classname>
                    <icon>/computer.png</icon>
                    <showOnToolBar>false</showOnToolBar>
                    <dimensions>
                        <width>500</width>
                        <height>325</height>
                    </dimensions>
                </component>
                 <component>
                    <title>My Host Certificates</title>
                    <description>Allows a user to obtain the host certificates in which they own.</description>
                    <classname>org.cagrid.gaards.ui.dorian.ifs.MyHostCertificatesWindow</classname>
                    <icon>/computers.png</icon>
                    <showOnToolBar>false</showOnToolBar>
                    <dimensions>
                        <width>550</width>
                        <height>400</height>
                    </dimensions>
                </component>
                
                <component>
                    <title>Download CA Certificate(s)</title>
                    <description>Download the Dorian CA certificate.</description>
                    <classname>org.cagrid.gaards.ui.dorian.ifs.ViewCACertificateWindow</classname>
                    <icon>/download.png</icon>
                    <showOnToolBar>false</showOnToolBar>
                    <dimensions>
                        <width>500</width>
                        <height>150</height>
                    </dimensions>
                </component>
            </components>
        </menu>
        <menu>
            <title>Grid User Management</title>
            <description>tools</description>
            <showIcons>true</showIcons>
            <components>
                <component>
                    <title>Account Management</title>
                    <description>Manage Grid User Accounts</description>
                    <classname>org.cagrid.gaards.ui.dorian.ifs.UserManagerWindow</classname>
                    <icon>/users.png</icon>
                    <showOnToolBar>false</showOnToolBar>
                    <dimensions>
                        <width>700</width>
                        <height>550</height>
                    </dimensions>
                </component>
                <component>
                    <title>Host Certificate Management</title>
                    <description>Manage Host Certificates</description>
                    <classname>org.cagrid.gaards.ui.dorian.ifs.HostCertificatesWindow</classname>
                    <icon>/computers.png</icon>
                    <showOnToolBar>false</showOnToolBar>
                    <dimensions>
                        <width>700</width>
                        <height>550</height>
                    </dimensions>
                </component>
                <component>
                    <title>Trusted Identity Provider(s)</title>
                    <description>Trusted Identity Provider(s)</description>
                    <classname>org.cagrid.gaards.ui.dorian.ifs.TrustedIdPsWindow</classname>
                    <icon>/trusted-idp.png</icon>
                    <showOnToolBar>false</showOnToolBar>
                </component>
                <component>
                    <title>Administrators</title>
                    <description>Administrators</description>
                    <classname>org.cagrid.gaards.ui.dorian.ifs.AdministratorsWindow</classname>
                    <icon>/preferences-desktop-theme.png</icon>
                    <showOnToolBar>false</showOnToolBar>
                </component>
            </components>
        </menu>
        
        <menu>
            <title>Local Accounts</title>
            <description>Tools for registering and managing local Dorian accounts.</description>
            <showIcons>true</showIcons>
            <components>
                <component>
                    <title>Registration</title>
                    <description>Register with a Dorian for a local account.</description>
                    <classname>org.cagrid.gaards.ui.dorian.idp.ApplicationWindow</classname>
                    <icon>/application.png</icon>
                    <showOnToolBar>false</showOnToolBar>
                    <dimensions>
                        <width>400</width>
                        <height>550</height>
                    </dimensions>
                </component>
                   <component>
                    <title>Change Password</title>
                    <description>Allows a Dorian IdP user to change their password.</description>
                    <classname>org.cagrid.gaards.ui.dorian.idp.ChangePasswordWindow</classname>
                    <icon>/password.png</icon>
                    <showOnToolBar>false</showOnToolBar>
                    <dimensions>
                        <width>500</width>
                        <height>250</height>
                    </dimensions>
                </component>
                <component>
                    <title>Local Account Management</title>
                    <description>Local Account Management</description>
                    <classname>org.cagrid.gaards.ui.dorian.idp.UserManagerWindow</classname>
                    <icon>/users.png</icon>
                    <showOnToolBar>false</showOnToolBar>
                    <dimensions>
                        <width>600</width>
                        <height>550</height>
                    </dimensions>
                </component>
               
            </components>
        </menu>
    </menus>

    <configuration>
        <ConfigurationDescriptors>
            <ConfigurationDescriptor>
                <DisplayName>Grid User Management</DisplayName>
                <SystemName>dorian</SystemName>
                <ModelClassname>org.cagrid.grape.configuration.GeneralConfiguration</ModelClassname>
                <qname>
                    <namespace>http://www.cagrid.org/1/grape-general-configuration</namespace>
                    <name>GeneralConfiguration</name>
                </qname>
                <ConfigurationPanel>org.cagrid.grape.GeneralConfigurationEditor</ConfigurationPanel>
                <DefaultFile>ext/resources/dorian-ui-configuration.xml</DefaultFile>
            </ConfigurationDescriptor>
        </ConfigurationDescriptors>
    </configuration>
</application>
