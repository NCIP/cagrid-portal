<?xml version="1.0"?>

<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd">

  <info organisation="caGrid" module="gridftpauthz" revision="${project.version}">
    <license name="caGrid" url="http://cagrid.org/wiki/CaGrid:LICENSE-1.3"/>
    <description>caGrid GridFTP authorization plugins (GridGrouper)</description>
  </info>

  <configurations>
    <conf name="impl-test" visibility="private"/>
    <!-- Public Configurations-->
    <conf name="default" visibility="public"/>
    <conf name="test" visibility="public" extends="impl-test"/>
  </configurations>


  <publications>
    <artifact name="caGrid-${ivy.module}-core" conf="default" type="jar"/>
    <artifact name="caGrid-${ivy.module}-tests" conf="test" type="jar"/>
  </publications>

  <dependencies>
    <dependency rev="latest.integration" org="caGrid" name="core"
      conf="default->default;impl-test->test"/>
    <dependency rev="latest.integration" org="caGrid" name="gridgrouper" conf="default->client,schemas"/>

    <!-- External Dependencies -->
    <dependency rev="1.0" org="mcsl" name="gridftpauthz" conf="default->default"/>
    <dependency rev="4.4" org="junit" name="junit" conf="impl-test->default"/>

  </dependencies>
</ivy-module>
