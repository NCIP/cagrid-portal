<project name="Upgrade Tomcat Dorian 1.1 to 1.2" basedir="." default="upgradeTomcat">

	<import file="build.xml" />


	<target name="upgradeTomcat" description="" depends="all,upgrade, setDeploymentProperties, upgradeConfiguration, deleteOlderJars, deployTomcat" />

	<target name="upgradeConfiguration">
		<property name="service.deployment.dir" value="${tomcat.deploy.dir}/etc/${service.deployment.dir.name}" />
		<copy file="${service.deployment.dir}/dorian-conf.xml" tofile="etc/dorian-conf.xml" />
		<replace file="etc/dorian-conf.xml" token="database" value="DatabaseConfiguration" />
	</target>

	<target name="deleteOlderJars">
		<property name="service.lib.dir" value="${tomcat.deploy.dir}/lib" />
		<delete>
			<fileset dir="${service.lib.dir}" includes="caGrid**" />
		</delete>
	</target>
</project>



