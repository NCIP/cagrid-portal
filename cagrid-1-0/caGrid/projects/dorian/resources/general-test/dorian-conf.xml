<dorian>
	<resource name="DorianConfiguration" class="gov.nih.nci.cagrid.dorian.service.DorianConfiguration">
		<dorian-config>
			<dorian-internal-id>TEST_DORIAN</dorian-internal-id>
		    <database>
			<name/>
			<driver>com.mysql.jdbc.Driver</driver>
            <urlPrefix>jdbc:mysql:</urlPrefix>
			<host>localhost</host>
			<port>3306</port>
			<username>root</username>
			<password>gomets123</password>
			<pool>1</pool>
		</database>
		<outgoing-email host="columbus.bmi.ohio-state.edu" port="25" protocol="smtp"/>
        </dorian-config>
	</resource>	
	
	<resource name="IdPConfiguration" class="gov.nih.nci.cagrid.dorian.idp.IdPConfiguration">
		<idp-config>
			<uid-length min="4" max="10"/>
		    <password-length min="6" max="10"/>
		    <registration-policy class="gov.nih.nci.cagrid.dorian.idp.ManualRegistrationPolicy"/>
		    <asserting-credentials auto="true" renew="true" key-password="idpkey"/>
		    <!-- <asserting-credentials auto="false" renew="false" cert="" key="" key-password=""/> -->
		</idp-config>
	</resource>	
	
	<resource name="IFSConfiguration" class="gov.nih.nci.cagrid.dorian.ifs.IFSConfiguration">
		<ifs-config>
			<idp-name-length min="4" max="10"/>
			<credentials-valid years="12" months="0" days="0" hours="0" minutes="0" seconds="0"/>
			<max-proxy-lifetime hours="12" minutes="0" seconds="0"/>
			<policies>
				<policy name="Auto Approval/Auto Renewal" class="gov.nih.nci.cagrid.dorian.ifs.AutoApprovalAutoRenewalPolicy"/>
				<policy name="Manual Approval/Auto Renewal" class="gov.nih.nci.cagrid.dorian.ifs.ManualApprovalAutoRenewalPolicy"/>
				<policy name="Manual Approval/Manual Renewal" class="gov.nih.nci.cagrid.dorian.ifs.ManualApprovalPolicy"/>
				<policy name="Auto Approval/Manual Renewal" class="gov.nih.nci.cagrid.dorian.ifs.AutoApprovalPolicy"/>
			</policies>
		</ifs-config>
	</resource>	
		
	<resource name="DorianCertificateAuthorityConf" class="gov.nih.nci.cagrid.dorian.ca.DorianCertificateAuthorityConf">
		<dorian-ca-config>
		    <ca-password value="password"/>
		  	<auto-renewal enabled="true" years="0" months="60" days="0" hours="0" minutes="0" seconds="0"/>
		</dorian-ca-config>
	</resource>	
</dorian>