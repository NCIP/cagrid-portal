<gums>
	<resource name="GUMSConfiguration" class="gov.nih.nci.cagrid.gums.service.GUMSConfiguration">
		<gums-config>
			<gums-internal-id>GUMS</gums-internal-id>
		    <database>
			<name/>
			<driver>com.mysql.jdbc.Driver</driver>
            <urlPrefix>jdbc:mysql:</urlPrefix>
			<host>localhost</host>
			<port>3306</port>
			<username>root</username>
			<password>gomets123</password>
			<pool>1</pool>
		</database>
		<username-length min="4" max="20"/>
		<password-length min="6" max="10"/>
		<default-proxy-time hours="12"/>
		<outgoing-email host="columbus.bmi.ohio-state.edu" port="25" protocol="smtp"/>
		</gums-config>
	</resource>	
	<resource name="IdPConfiguration" class="gov.nih.nci.cagrid.gums.idp.IdpConfiguration">
		<idp-config>
			<uid-length min="4" max="20"/>
		    <password-length min="6" max="10"/>
		    <registration-policy class="gov.nih.nci.cagrid.gums.idp.ManualRegistrationPolicy"/>
		    <asserting-credentials auto="true" renew="true"/>
		    <!-- <asserting-credentials auto="false" renew="false" cert="" key="" key-password=""/> -->
		</idp-config>
	</resource>	
	<resource name="GUMSCertificateAuthorityConf" class="gov.nih.nci.cagrid.gums.ca.GUMSCertificateAuthorityConf">
		<gums-ca-config>
		    <ca-password value="admin"/>
		  	<auto-renewal enabled="true" years="0" months="60" days="0" hours="0" minutes="0" seconds="0"/>
		</gums-ca-config>
	</resource>	
</gums>