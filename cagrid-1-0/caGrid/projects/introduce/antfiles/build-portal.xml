<project name="cagrid_portal" basedir="." default="usage">
	<target name="usage">
		<echo message="Not to be called directly."/>
	</target>
	<!-- put stuff in here needed for building introduce-->
	<target name="preparePortal">
		<path id="Portal.classpath">
			<pathelement location="${introduce.classes.dir}"/>
			<fileset dir="${lib.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${build.lib.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${ext.lib.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${ext.globus.dir}/lib">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${ant.library.dir}">
				<include name="*.jar"/>
			</fileset>
			<pathelement location="${basedir}/resources/portal/introduce"/>
			<pathelement location="${ext.resources.dir}/portal/common"/>
			<pathelement location="${basedir}/doc/help"/>
		</path>
		<path id="Portal.test.classpath">
			<pathelement location="${introduce.classes.dir}"/>
			<pathelement location="${introduce.test.classes.dir}"/>
			<fileset dir="${lib.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${build.lib.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${test.lib.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${ext.test.lib.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${ext.lib.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${ext.globus.dir}/lib">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${ant.library.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset dir ="${basedir}/extensions/lib">
				<include name="*.jar"/>
				<exclude name="${jars.prefixname}*.jar"/>
			</fileset>
			<pathelement location="${basedir}/resources/portal/introduce"/>
			<pathelement location="${ext.resources.dir}/portal/common"/>
			<pathelement location="${basedir}/doc/help"/>
		</path>
		<path id="Portal.run.classpath">
			<pathelement location="${introduce.classes.dir}"/>
			<pathelement location="${introduce.test.classes.dir}"/>
			<fileset dir="${lib.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${build.lib.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${test.lib.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${ext.test.lib.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${ext.lib.dir}">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${extensions.lib.dir}">
				<include name="*.jar"/>
				<exclude name="${jars.prefixname}*.jar"/>
			</fileset>
			<fileset dir="${ext.globus.dir}/lib">
				<include name="*.jar"/>
			</fileset>
			<fileset dir="${ant.library.dir}">
				<include name="*.jar"/>
			</fileset>
			<pathelement location="${basedir}/resources/portal/introduce"/>
			<pathelement location="${ext.resources.dir}/portal/common"/>
			<pathelement location="${basedir}/doc/help"/>
		</path>
	</target>
</project>
