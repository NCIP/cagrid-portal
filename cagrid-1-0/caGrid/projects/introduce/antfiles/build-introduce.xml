<project name="cagrid_introduce" basedir="." default="usage">
	<target name="usage">
		<echo message="Not to be called directly." />
	</target>

	<!-- put stuff in here needed for building introduce-->
	<target name="prepareIntroduce">
		<path id="Introduce.classpath">
			<path refid="Common.classpath" />
			<fileset dir="${lib.dir}">
				<include name="*.jar" />
			</fileset>
		</path>
		<path id="Introduce.test.classpath">
			<path refid="Common.test.classpath" />
			<fileset dir="${lib.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${build.lib.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${test.lib.dir}">
				<include name="*.jar" />
			</fileset>
		</path>
		
		<path id="Portal.classpath">
			<path refid="Common.classpath" />
			<fileset dir="${lib.dir}">
				<include name="*.jar" />
			</fileset>
		</path>
		<path id="Portal.test.classpath">
			<path refid="Common.test.classpath" />
			<fileset dir="${lib.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${build.lib.dir}">
				<include name="*.jar" />
			</fileset>
			<fileset dir="${test.lib.dir}">
				<include name="*.jar" />
			</fileset>
		</path>
		
	</target>
</project>