<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<!-- in order to create an installer from this install file you will
need to download IZForge and run the following command (modify paths of course)

    C:\Program Files\IzPack\bin\compile c:\projects\cagrid\caGrid\projects\introduce
    \install.xml -b c:\projects\cagrid\caGrid\projects\introduce -o c:\introduce-1.0
    .jar

-->

<installation version="1.0">
    
    <native type="izpack" name="ShellLink.dll"/>

    <info>
        <appname>Introduce</appname>
        <appversion>1.0</appversion>
        <authors>
            <author name="Shannon Hastings" email="hastings@bmi.osu.edu"/>
            <author name="Scott Oster" email="oster@bmi.osu.edu"/>
            <author name="Stephen Langella" email="langella@bmi.osu.edu"/>
            <author name="David W. Ervin" email="ervin@bmi.osu.edu"/>
            <author name="Tahsin Kurc" email="kurc@bmi.osu.edu"/>
            <author name="Joel Saltz" email="saltz@bmi.osu.edu"/>
        </authors>
        <url>http://www.introduce.msc.osu.edu/</url>
        <webdir>http://bmi.osu.edu/~hastings</webdir>
    </info>
    
    <guiprefs height="350" resizable="yes" width="640">
        <laf name="metouia">
            <os family="unix" />
        </laf>
        <laf name="liquid">
            <os family="windows" />
            <param name="decorate.dialogs" value="yes" />
            <param name="decorate.frames" value="yes" />
        </laf>
    </guiprefs>
   
    <locale>
        <langpack iso3="eng"/>
        <langpack iso3="fra"/>
    </locale>
    
    <resources>
        <res id="LicencePanel.licence" src="Licence.txt"/>
        <res id="InfoPanel.info" src="Readme.txt"/>
        <res id="Installer.image" src="" />
        <res id="installer.langsel.img" src="resources/portal/introduce/introduceSplash.png" />
        <res id="shortcutSpec.xml" src="install/shortcutSpec.xml"/>
    </resources>
    
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="ShortcutPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Base" required="yes">
            <description>Introduce 1.0 Binary Release</description>
            <file src="lib" targetdir="$INSTALL_PATH"/> <!-- Reccursive adding -->
            <file src="build/jars" targetdir="$INSTALL_PATH/build"/>
            <file src="resources" targetdir="$INSTALL_PATH"/>
            <file src="antfiles" targetdir="$INSTALL_PATH"/>
            <file src="extensions" targetdir="$INSTALL_PATH"/>
            <file src="ext" targetdir="$INSTALL_PATH"/>
            <file src="conf" targetdir="$INSTALL_PATH"/>
            <file src="schema" targetdir="$INSTALL_PATH"/>
            <file src="skeleton" targetdir="$INSTALL_PATH"/>
            <file src="test" targetdir="$INSTALL_PATH"/>
            <singlefile src="install/run.xml" target="$INSTALL_PATH/build.xml"/>
            <file src="doc" targetdir="$INSTALL_PATH"/> 
        </pack>
        <pack name="Docs" required="no">
            <description>API Documentation</description>
            <file src="build/javadoc" targetdir="$INSTALL_PATH/doc"/>
        </pack>
        <pack name="Sources" required="no">
            <description>Source Code</description>
            <file src="src" targetdir="$INSTALL_PATH"/>
        </pack>
    </packs>

</installation>