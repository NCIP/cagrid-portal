<?xml version="1.0" encoding="iso-8859-1" standalone="yes" ?>
<!-- in order to create an installer from this install file you will
need to download IZForge and run the following command (modify paths of course)

    C:\Program Files\IzPack\bin\compile c:\projects\cagrid\caGrid\projects\introduce
    \install.xml -b c:\projects\cagrid\caGrid\projects\introduce -o c:\introduce-1.0
    .jar

-->

<installation version="1.0">
    
    <native type="izpack" name="ShellLink.dll"/>

    <info>
        <appname>Introduce</appname>
        <appversion>1.0</appversion>
        <authors>
            <author name="Shannon Hastings" email="hastings@bmi.osu.edu"/>
            <author name="Scott Oster" email="oster@bmi.osu.edu"/>
            <author name="Stephen Langella" email="langella@bmi.osu.edu"/>
            <author name="David W. Ervin" email="ervin@bmi.osu.edu"/>
            <author name="Tahsin Kurc" email="kurc@bmi.osu.edu"/>
            <author name="Joel Saltz" email="saltz@bmi.osu.edu"/>
        </authors>
        <url>http://www.introduce.msc.osu.edu/</url>
        <webdir>http://bmi.osu.edu/~hastings</webdir>
    </info>
    
    
    <guiprefs width="700" height="600" resizable="no">   
        <modifier key="useFlags" value="no"/>
        <modifier key="useHeadingPanel" value="yes"/>
        <modifier key="headingLineCount" value="1"/>
        <modifier key="headingFontSize" value="1.5"/>
        <modifier key="headingBackgroundColor" value="0x00ffffff"/>
        <modifier key="headingPanelCounter" value="text"/>
        <modifier key="headingPanelCounterPos" value="inHeading"/>
    </guiprefs>
   
    <locale>
        <langpack iso3="eng"/>
        <langpack iso3="fra"/>
    </locale>
    
    <resources>
        <res id="LicencePanel.licence" src="Licence.txt"/>
        <res id="InfoPanel.info" src="Readme.txt"/>
        <res id="installer.langsel.img" src="resources/portal/introduce/introduceSplash.png" />
        <res id="shortcutSpec.xml" src="install/shortcutSpec.xml"/>
        <res id="unix_shortcutSpec.xml" src="install/unix-shortcutSpec.xml" /> 
        <res src="install/border1.png" id="Installer.image.0" /> 
        <res src="install/border2.png" id="Installer.image.1" /> 
        <res src="install/border3.png" id="Installer.image.2" /> 
        <res src="install/border4.png" id="Installer.image.3" /> 
        <res src="install/border5.png" id="Installer.image.4" /> 
        <res src="install/border6.png" id="Installer.image.5" /> 
        <res src="install/border7.png" id="Installer.image.6" /> 
        <res src="install/border8.png" id="Installer.image.7" />   
        <res src="install/border8.png" id="Installer.image.8" />   
    </resources>
    
    <panels>
        <panel classname="HelloPanel"/>
        <panel classname="InfoPanel"/>
        <panel classname="LicencePanel"/>
        <panel classname="TargetPanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="ShortcutPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    
    <!-- 
        The packs section.
        We specify here our packs.
    -->
    <packs>
        <pack name="Core" required="yes">
            <description>Introduce 1.0 Binary Release</description>
            <fileset dir="lib" targetdir="$INSTALL_PATH/lib"/>
            <fileset dir="build/jars" targetdir="$INSTALL_PATH/build/jars"/>
            <fileset dir="resources" targetdir="$INSTALL_PATH/resources"/>
            <fileset dir="antfiles" targetdir="$INSTALL_PATH/antfiles"/>
            <fileset dir="extensions" targetdir="$INSTALL_PATH/extensions"/>
            <fileset dir="ext" targetdir="$INSTALL_PATH/ext"/>
            <fileset dir="conf" targetdir="$INSTALL_PATH/conf"/>
            <fileset dir="schema" targetdir="$INSTALL_PATH/schema"/>
            <fileset dir="skeleton" targetdir="$INSTALL_PATH/skeleton"/>
            <fileset dir="test" targetdir="$INSTALL_PATH/test"/>
            <singlefile src="install/run.xml" target="$INSTALL_PATH/build.xml"/>
            <singlefile src="introduce" target="$INSTALL_PATH/introduce"/>
            <singlefile src="introduce.bat" target="$INSTALL_PATH/introduce.bat"/>
            <fileset dir="doc" targetdir="$INSTALL_PATH/doc"/> 
        </pack>
        <pack name="Sources" required="no">
            <description>Source Code</description>
            <fileset dir="src" targetdir="$INSTALL_PATH/src"/>
        </pack>
        <pack name="Docs" required="no">
            <description>API Documentation</description>
            <fileset dir="build/javadoc" targetdir="$INSTALL_PATH/doc/javadoc"/>
        </pack>
        <pack name="CaBIG General Extensions" required="no">
            <description>A general set of extensions for use in caGrid service development.</description>
            <fileset dir="tmp/extensions/cabigextensions" targetdir="$INSTALL_PATH/extensions"/>
        </pack>
        <pack name="CaBIG Data Service Extension" required="no">
            <description>Extension for generating cagrid compliant data services.</description>
            <fileset dir="tmp/extensions/data" targetdir="$INSTALL_PATH/extensions"/>
        </pack>
        <pack name="CaDSR Extension" required="no">
            <description>Extension for using caDSR for data type discovery.</description>
            <fileset dir="tmp/extensions/cadsr" targetdir="$INSTALL_PATH/extensions"/>
        </pack>
        <pack name="Bulk Data Transfer Extension" required="no">
            <description>Extension creating services which have the ability to transfer data via third party means.</description>
            <fileset dir="tmp/extensions/bulkDataTransfer" targetdir="$INSTALL_PATH/extensions"/>
        </pack>
    </packs>

</installation>