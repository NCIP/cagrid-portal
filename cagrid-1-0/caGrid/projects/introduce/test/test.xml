<!-- ======================================================================= -->
<project name="caGrid-introduce_tests_harness" basedir=".">
	<property name="junit.results.dir" value="${test.log.dir}/junit"/>
	<mkdir dir="${test.log.dir}"/>
	<!-- call the test target for each project and aggregates the log resutls  -->
	<target name="test" depends="checkGlobus">
		
		<echo message="Test results dir: ${junit.results.dir}" />
		<mkdir dir="${junit.results.dir}"/>
		
		<junit dir="${basedir}" printsummary="yes" haltonfailure="true" haltonerror="true" showoutput="true">
			<sysproperty key="basedir" value="${basedir}"/>
			<jvmarg value="-Dbuild.dir=${classes.dir}"/>
			<classpath>
				<path refid="Introduce.test.classpath"/>
			</classpath>
			<formatter type="xml"/>
			<batchtest fork="no" todir="${junit.results.dir}">
				<fileset dir="${test.src.dir}/Introduce">
					<include name="**/*Test.java"/>
				</fileset>
			</batchtest>
		</junit>

		<junit dir="${basedir}" printsummary="yes" haltonfailure="true" haltonerror="true" showoutput="true">
			<sysproperty key="basedir" value="${basedir}"/>
			<jvmarg value="-Dbasedir=${basedir}"/>
			
			<sysproperty key="awt.toolkit" value="org.uispec4j.interception.toolkit.UISpecToolkit"/>
			<jvmarg value="-Dawt.toolkit=org.uispec4j.interception.toolkit.UISpecToolkit"/>
			
			<classpath refid="Portal.test.classpath"/>
			
			<formatter type="xml"/>
			<batchtest fork="yes" todir="${junit.results.dir}">
				<fileset dir="${test.src.dir}/Portal">
					<include name="**/*Test.java"/>
				</fileset>
			</batchtest>
		</junit>
	</target>
</project>
