<grid-portal>
	<resource name="GridPortalConfig" class="org.projectmobius.portal.GridPortalConfig">
		<grid-portal-config>
			<application>
				<name>caGrid Introduce Portal</name>
				<icon>/caBIGWorld.jpg</icon>
				<logo-bar-image>/caBIGLogo.jpg</logo-bar-image>
				<about><![CDATA[<html><h2>caGrid Introduce Portal</h2><h3>Authors:</h3><a href="mailto:hastings@bmi.osu.edu">Shannon Hastings</a> and <a href="mailto:langella@bmi.osu.edu">Stephen Langella</a> and <a href="mailto:oster@bmi.osu.edu">Scott Oster</a>]]></about>
				<dimensions>
					<width>800</width>
					<height>600</height>
				</dimensions>
			</application>
			<components>
				<component>
					<title>CaBIG Registration</title>
					<description>Apply for a GUMS account.</description>
					<class>gov.nih.nci.cagrid.gums.portal.registration.RegistrationViewer</class>
					<icon>/DocumentDraw.gif</icon>
				</component>
				<component>
					<title>Credential Management</title>
					<description>Manage Grid Credentials</description>
					<class>gov.nih.nci.cagrid.gums.portal.credentials.CredentialManagementMenu</class>
					<icon>/Key.gif</icon>
					<dimensions>
						<width>300</width>
						<height>300</height>
					</dimensions>
				</component>
				<component>
					<title>Create Service</title>
					<description>Create Service Skeleton</description>
					<class>gov.nih.nci.cagrid.introduce.portal.creation.CreationViewer</class>
					<icon>/Plus20X20.gif</icon>
					<dimensions>
						<width>500</width>
						<height>300</height>
					</dimensions>
				</component>
				<component>
					<title>Modify Service</title>
					<description>Modify Service Skeleton</description>
					<class>gov.nih.nci.cagrid.introduce.portal.modification.ModificationViewer</class>
					<icon>/Hammer.gif</icon>
				</component>
			</components>
		</grid-portal-config>
	</resource>
	<resource name="GumsPortalConf" class="gov.nih.nci.cagrid.gums.portal.GumsPortalConf">
		<gums-portal-config>
			<gums-service>http://dc01.bmi.ohio-state.edu:8080/ogsa/services/cagrid/gums</gums-service>
			<attribute-viewers>
				<attribute-viewer>
					<namespace>cagrid.nci.nih.gov/1/person</namespace>
					<name>person</name>
					<class>gov.nih.nci.cagrid.gums.portal.attributes.PersonAttributeViewer</class>
				</attribute-viewer>
			</attribute-viewers>
		</gums-portal-config>
	</resource>
</grid-portal>
