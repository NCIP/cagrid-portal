<grid-portal>
	<resource name="GridPortalConfig" class="org.projectmobius.portal.GridPortalConfig">
		<grid-portal-config>
			<application>
				<name>Introduce</name>
				<icon>/applications-internet.png</icon>
				<logo-bar-image>/caBIGLogo.jpg</logo-bar-image>
				<about><![CDATA[<html><h2>Introduce Grid Service Authoring Toolkit</h2><h3>Authors:</h3><a href="mailto:hastings@bmi.osu.edu">Shannon Hastings</a> and <a href="mailto:langella@bmi.osu.edu">Stephen Langella</a> and <a href="mailto:oster@bmi.osu.edu">Scott Oster</a>]]></about>
				<dimensions>
					<width>1000</width>
					<height>800</height>
				</dimensions>
			</application>
			<components>
				<component>
					<title>Create New Service</title>
					<description>Create Service Skeleton</description>
					<class>gov.nih.nci.cagrid.introduce.portal.creation.CreationViewer</class>
					<icon>/cog_add.png</icon>
					<dimensions>
						<width>500</width>
						<height>300</height>
					</dimensions>
				</component>	
				<component>
					<title>Modify Service</title>
					<description>Modify Service Skeleton</description>
					<class>gov.nih.nci.cagrid.introduce.portal.modification.ModificationViewer</class>
					<icon>/cog_edit.png</icon>
					<dimensions>
						<width>0</width>
						<height>0</height>
					</dimensions>
				</component>
				<component>
					<title>Deploy Service</title>
					<description>Deploy Grid Service</description>
					<class>gov.nih.nci.cagrid.introduce.portal.deployment.DeploymentViewer</class>
					<icon>/cog_go.png</icon>
					<dimensions>
						<width>0</width>
						<height>0</height>
					</dimensions>
				</component>
				<component>
					<title>Discovery Tools</title>
					<description>Discovery Tools</description>
					<class>gov.nih.nci.cagrid.introduce.portal.discoverytools.core.TypesToolsComponent</class>
					<icon>/system-search.png</icon>
				</component>
			</components>
		</grid-portal-config>
	</resource>
	<resource name="IntroducePortalConf" class="gov.nih.nci.cagrid.introduce.portal.IntroducePortalConf">
		<introduce-portal-config>
			<namespaceTypeToolsComponents>
				<namespaceTypeToolsComponent class="gov.nih.nci.cagrid.introduce.portal.discoverytools.gme.GMEViewer" type="GME" displayName="Global Model Exchange">
					<properties>
						<property key="GME_URL" value="http://dc01.bmi.ohio-state.edu:8080/wsrf/services/cagrid/GlobalModelExchange"></property>
					</properties>
				</namespaceTypeToolsComponent>
			</namespaceTypeToolsComponents>
			<namespaceTypeDiscoveryComponents>
				<namespaceTypeDiscoveryComponent class="gov.nih.nci.cagrid.introduce.portal.modification.discovery.gme.GMETypeSelectionComponent" type="GME" displayName="Global Model Exchange">
					<properties>
						<property key="GME_URL" value="http://dc01.bmi.ohio-state.edu:8080/wsrf/services/cagrid/GlobalModelExchange"></property>
					</properties>
				</namespaceTypeDiscoveryComponent>
				<namespaceTypeDiscoveryComponent class="gov.nih.nci.cagrid.introduce.portal.modification.discovery.files.FileTypesSelectionComponent" type="FILE" displayName="File System"/>
			</namespaceTypeDiscoveryComponents>
		</introduce-portal-config>
	</resource>
</grid-portal>
