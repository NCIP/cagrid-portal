<grid-portal>
	<resource name="GridPortalConfig" class="org.projectmobius.portal.GridPortalConfig">
		<grid-portal-config>
			<application>
				<name>Introduce</name>
				<icon>/applications-internet.png</icon>
				<logo-bar-image>/caBIGLogo.jpg</logo-bar-image>
				<about><![CDATA[<html><h2>caGrid Introduce Portal</h2><h3>Authors:</h3><a href="mailto:hastings@bmi.osu.edu">Shannon Hastings</a> and <a href="mailto:langella@bmi.osu.edu">Stephen Langella</a> and <a href="mailto:oster@bmi.osu.edu">Scott Oster</a>]]></about>
				<dimensions>
					<width>1000</width>
					<height>800</height>
				</dimensions>
			</application>
			<components>
				<component>
					<title>Create New Service</title>
					<description>Create Service Skeleton</description>
					<class>gov.nih.nci.cagrid.introduce.portal.creation.CreationViewer</class>
					<icon>/cog_add.png</icon>
					<dimensions>
						<width>500</width>
						<height>300</height>
					</dimensions>
				</component>	
				<component>
					<title>Modify Service</title>
					<description>Modify Service Skeleton</description>
					<class>gov.nih.nci.cagrid.introduce.portal.modification.ServiceModificationBootstrapper</class>
					<icon>/cog_edit.png</icon>
					<dimensions>
						<width>0</width>
						<height>0</height>
					</dimensions>
				</component>
				<component>
					<title>Deploy Service</title>
					<description>Deploy Grid Service</description>
					<class>gov.nih.nci.cagrid.introduce.portal.deployment.DeploymentViewer</class>
					<icon>/cog_go.png</icon>
					<dimensions>
						<width>0</width>
						<height>0</height>
					</dimensions>
				</component>
				<component>
					<title>caGrid GME Tools</title>
					<description>caGrid GME Tools</description>
					<class>gov.nih.nci.cagrid.introduce.portal.gme.GMEViewer</class>
					<icon>/mobiusIcon.gif</icon>
				</component>
			</components>
		</grid-portal-config>
	</resource>
	<resource name="IntroducePortalConf" class="gov.nih.nci.cagrid.introduce.portal.IntroducePortalConf">
		<introduce-portal-config discoveryType="GME">
			<gme>http://dc01.bmi.ohio-state.edu:8080/wsrf/services/cagrid/GlobalModelExchange</gme>
			<cadsr></cadsr>
		</introduce-portal-config>
	</resource>
</grid-portal>
