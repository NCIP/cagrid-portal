<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

	<!-- Controllers -->
	<bean id="participantControllerTemplate" abstract="true">
		<property name="personDao" ref="personDao" />
		<!-- property name="addressDao" ref="addressDao" / -->
	</bean>

	<bean id="participantsListController"
		class="gov.nih.nci.cagrid.portal2.portlet.participant.ParticipantsListController"
		parent="participantControllerTemplate" />

	<bean id="participantViewController"
		class="gov.nih.nci.cagrid.portal2.portlet.participant.ParticipantViewController"
		parent="participantControllerTemplate" />

	<bean id="participantDeleteController"
		class="gov.nih.nci.cagrid.portal2.portlet.participant.ParticipantDeleteController"
		parent="participantControllerTemplate" />

	<bean id="participantAddController"
		class="gov.nih.nci.cagrid.portal2.portlet.participant.ParticipantAddController"
		parent="participantControllerTemplate">
		<property name="commandName" value="participant" />
		<property name="commandClass"
			value="gov.nih.nci.cagrid.portal2.domain.Person" />
		<property name="sessionForm" value="true" />
		<property name="pageAttribute" value="page" />
		<property name="pages" value="participantAdd,participantAdd" />
		<property name="validator" ref="participantValidator" />
	</bean>

	<bean id="participantHelpController"
		class="org.springframework.web.portlet.mvc.ParameterizableViewController">
		<property name="viewName" value="participantHelp" />
	</bean>

	<bean id="participantValidator"
		class="gov.nih.nci.cagrid.portal2.portlet.participant.ParticipantValidator" />

	<!-- Handler Mappings -->
	<bean id="portletModeParameterHandlerMapping"
		class="org.springframework.web.portlet.handler.PortletModeParameterHandlerMapping">
		<property name="order" value="1" />
		<property name="interceptors">
			<list>
				<ref bean="parameterMappingInterceptor" />
				<ref bean="openSessionInViewInterceptor" />
			</list>
		</property>
		<property name="portletModeParameterMap">
			<map>
				<entry key="view">
					<map>
						<entry key="listParticipants"
							value-ref="participantsListController" />
						<entry key="viewParticipant"
							value-ref="participantViewController" />
						<entry key="deleteParticipant"
							value-ref="participantDeleteController" />
						<entry key="addParticipant"
							value-ref="participantAddController" />
					</map>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="portletModeHandlerMapping"
		class="org.springframework.web.portlet.handler.PortletModeHandlerMapping">
		<property name="order" value="2" />
		<property name="portletModeMap">
			<map>
				<entry key="view">
					<ref bean="participantsListController" />
				</entry>
				<entry key="help">
					<ref bean="participantHelpController" />
				</entry>
			</map>
		</property>
	</bean>
	
	<bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="viewClass" value="org.springframework.web.servlet.view.JstlView"/>
		<property name="prefix" value="/WEB-INF/jsp/participants/admin/"/>
		<property name="suffix" value=".jsp"/>
	</bean>	

	<!-- Exception Handler -->
	<bean id="defaultExceptionHandler"
		parent="defaultExceptionHandlerTemplate" />

</beans>