<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd">

	<!-- ========================= RESOURCE DEFINITIONS ========================= -->

	<!-- Configurer that replaces ${...} placeholders with values from a properties file -->
	<!-- (in this case, JDBC-related settings for the dataSource definition below) -->
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location"
			value="classpath:hibernate.properties" />
	</bean>

	<bean id="dataSource"
		class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close"
		p:driverClassName="${hibernate.connection.driver_class}"
		p:maxActive="5" p:maxIdle="2" p:maxWait="180000"
		p:removeAbandoned="true" p:removeAbandonedTimeout="300"
		p:logAbandoned="true" p:testWhileIdle="true" p:testOnReturn="true"
		p:timeBetweenEvictionRunsMillis="300000"
		p:minEvictableIdleTimeMillis="600000"
		p:url="${hibernate.connection.url}"
		p:username="${hibernate.connection.username}"
		p:password="${hibernate.connection.password}" />

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean"
		autowire="byName">
		<property name="annotatedClasses">
			<list>
				<value>gov.nih.nci.cagrid.portal2.domain.Address</value>
				<value>gov.nih.nci.cagrid.portal2.domain.Person</value>
				<value>
					gov.nih.nci.cagrid.portal2.domain.Participant
				</value>
				<value>
					gov.nih.nci.cagrid.portal2.domain.PortalUser
				</value>
				<value>
					gov.nih.nci.cagrid.portal2.domain.GridPortalUser
				</value>
				<value>
					gov.nih.nci.cagrid.portal2.domain.Workspace
				</value>
				<value>gov.nih.nci.cagrid.portal2.domain.Role</value>
				<value>gov.nih.nci.cagrid.portal2.domain.GridService</value>
				<value>gov.nih.nci.cagrid.portal2.domain.GridDataService</value>
				<value>gov.nih.nci.cagrid.portal2.domain.IndexService</value>
				<value>gov.nih.nci.cagrid.portal2.domain.ServiceAnnotation</value>
				<value>gov.nih.nci.cagrid.portal2.domain.StatusChange</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.ServiceMetadata</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.common.Enumeration</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.common.PointOfContact</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.common.ResearchCenter</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.common.SemanticMetadata</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.common.UMLAttribute</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.common.UMLClass</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.common.ValueDomain</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.service.CaDSRRegistration</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.service.ContextProperty</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.service.Fault</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.service.InputParameter</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.service.Operation</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.service.Output</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.service.Service</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.service.ServiceContext</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.dataservice.DomainModel</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.dataservice.UMLAssociation</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.dataservice.UMLAssociationEdge</value>
				<value>gov.nih.nci.cagrid.portal2.domain.metadata.dataservice.UMLClass</value>
				
			</list>
		</property>
	</bean>

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<tx:annotation-driven transaction-manager="transactionManager" proxy-target-class="true"/>

<!-- 
	<tx:advice id="txAdvice" transaction-manager="transactionManager">
		<tx:attributes>
			<tx:method name="get*" read-only="true" />
			<tx:method name="*" />
		</tx:attributes>
	</tx:advice>

	<aop:config proxy-target-class="true">
		<aop:pointcut id="daoOperation"
			expression="execution(* gov.nih.nci.cagrid.portal2.dao..*Dao.*(..))" />
		<aop:advisor advice-ref="txAdvice" pointcut-ref="daoOperation" />
	</aop:config>
	 -->

	<bean id="hibernateTemplate"
		class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="checkWriteOperations">
			<value>true</value>
		</property>
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<bean id="daoTemplate" abstract="true">
		<property name="hibernateTemplate">
			<ref local="hibernateTemplate" />
		</property>
	</bean>

	<bean id="addressDao" parent="daoTemplate"
		class="gov.nih.nci.cagrid.portal2.dao.AddressDao" />

	<bean id="personDao" parent="daoTemplate"
		class="gov.nih.nci.cagrid.portal2.dao.PersonDao" />
	<bean id="portalUserDao" parent="daoTemplate"
		class="gov.nih.nci.cagrid.portal2.dao.PortalUserDao" />
	<bean id="gridPortalUserDao" parent="daoTemplate"
		class="gov.nih.nci.cagrid.portal2.dao.GridPortalUserDao" />
	<bean id="participantDao" parent="daoTemplate"
		class="gov.nih.nci.cagrid.portal2.dao.ParticipantDao" />
	<bean id="roleDao" parent="daoTemplate"
		class="gov.nih.nci.cagrid.portal2.dao.RoleDao" />
	
	<bean id="gridServiceDao" parent="daoTemplate"
		class="gov.nih.nci.cagrid.portal2.dao.GridServiceDao" />
		
	<bean id="indexServiceDao" parent="daoTemplate"
		class="gov.nih.nci.cagrid.portal2.dao.IndexServiceDao" />

	<bean id="pointOfContactDao" parent="daoTemplate"
		class="gov.nih.nci.cagrid.portal2.dao.PointOfContactDao" />
		
	<bean id="serviceMetadataDao" parent="daoTemplate"
		class="gov.nih.nci.cagrid.portal2.dao.ServiceMetadataDao" />
		
	<bean id="workspaceDao" parent="daoTemplate"
		class="gov.nih.nci.cagrid.portal2.dao.WorkspaceDao" />		


	<bean id="openSessionInViewInterceptor"
		class="org.springframework.orm.hibernate3.support.OpenSessionInViewInterceptor"
		autowire="byName">
		<property name="singleSession">
			<value>true</value>
		</property>
		<property name="flushModeName">
			<value>FLUSH_AUTO</value>
		</property>
	</bean>




</beans>
