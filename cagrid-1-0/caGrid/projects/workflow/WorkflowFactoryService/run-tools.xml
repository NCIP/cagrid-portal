<project name="run-tools file" basedir="." default="runClient">
     <target name="runClient" depends="checkGlobus, defineClasspaths" description="Run the sample Client">
        <property name="service.url" value="http://localhost:8080/wsrf/services/cagrid/WorkflowFactoryService" />
        <property name="runclasspath" refid="run.classpath"/>
        <echo message="Connecting to service: ${service.url}" />
        <java failonerror="true" classname="gov.nih.nci.cagrid.workflow.client.WorkflowFactoryServiceClient" classpathref="run.classpath" fork="yes">
            <jvmarg value="-DGLOBUS_LOCATION=${ext.globus.dir}" />
            <arg value="-url" />
            <arg value="http://192.168.1.106:8080/wsrf/services/cagrid/WorkflowFactoryService" />
        </java>
    </target>
</project>
