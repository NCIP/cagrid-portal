<?xml version="1.0"?>
<project name="developers-build-deploy file" basedir=".">



	<!-- ============================================================== -->
	<!-- Pre Deploy Tomcat                                              -->
	<!-- ============================================================== -->
	<target name="preDeployTomcat">
     <copy todir="${build.lib.dir}">
            <fileset dir="${ext.lib}">
                <include name="*.jar" />
            </fileset>
    </copy>

    <runtarget target="deployGlobusHandler"/>
	</target>


	<!-- ============================================================== -->
	<!-- Pre Deploy Globus                                              -->
	<!-- ============================================================== -->
	<target name="preDeployGlobus">
         <copy todir="${build.lib.dir}">
            <fileset dir="${ext.lib}">
                <include name="*.jar" />
            </fileset>
        </copy>

	</target>

</project>
