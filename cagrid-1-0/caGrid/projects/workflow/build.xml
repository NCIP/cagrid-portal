<?xml version="1.0"?>

<project default="all" basedir=".">
    
    <target name="all">
        <ant dir="WorkflowFactoryService" target="all"/>
    </target>


    <target name="deploy">
        <ant dir="WorkflowFactoryService" target="deployTomcat"/>
        <ant dir="WorkflowFactoryService" target="deployGlobusHandler"/>
    </target>

    <target name="deployGlobus">
        <ant dir="WorkflowFactoryService" target="deployGlobus"/>
        <ant dir="WorkflowFactoryService" target="deployGlobusHandler"/>
    </target>

    <target name="clean">
        <ant dir="WorkflowFactoryService" target="clean"/>
    </target>

    <target name="test">
        <ant dir="WorkflowFactoryService" target="test"/>
    </target>

</project>

