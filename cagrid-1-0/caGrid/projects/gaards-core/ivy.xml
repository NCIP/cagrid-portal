<?xml version="1.0"?>

<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd">

  <info organisation="caGrid" module="gaards-core" revision="${project.version}">
    <license name="caGrid" url="http://www.cagrid.org/mwiki/index.php?title=CaGrid:LICENSE-1.1"/>
    <description>Provides low-level APIs for working with certificates.</description>
  </info>

  <configurations>
    <!-- Public Configurations-->
    <conf name="default" visibility="public"/>
    <conf name="test" visibility="public" extends="default"/>
    <conf name="endorsed" visibility="public" />
  </configurations>


  <publications>
    <artifact name="caGrid-${ivy.module}" conf="default" type="jar"/>
    <artifact name="caGrid-${ivy.module}-tests" conf="test" type="jar"/>
  </publications>

  <dependencies>
    <dependency rev="latest.integration" org="caGrid" name="core" conf="default->default;test->test"/>
    <dependency rev="1.0" org="jdom" name="jdom" conf="default->default"/>
    <dependency rev="jce-1.2" org="eracom" name="protecttoolkit-j" conf="default->default"/>
    <dependency rev="latest.integration" org="caGrid" name="opensaml" conf="default->default;endorsed->endorsed"/>
  </dependencies>
</ivy-module>
