<?xml version="1.0"?>

<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd">

  <info organisation="caGrid" module="authz" revision="${project.version}">
    <license name="caGrid" url="http://www.cagrid.org/mwiki/index.php?title=CaGrid:LICENSE-1.1"/>
    <description>Provides APIs for authorization</description>
  </info>

  <configurations>
    <conf name="impl" visibility="private" extends="default"/>
    <conf name="impl-test" visibility="private"/>
    
    <!-- Public Configurations-->
    <conf name="default" visibility="public"/>
    <conf name="test" visibility="public" extends="default,impl-test"/>
  </configurations>


  <publications>
    <artifact name="caGrid-${ivy.module}-common" conf="default" type="jar"/>
    <!--<artifact name="caGrid-${ivy.module}-tests" conf="test" type="jar"/>-->
  </publications>

  <dependencies>
    <dependency rev="latest.integration" org="caGrid" name="core" conf="default->default;impl-test->test"/>
    <dependency rev="latest.integration" org="caGrid" name="gridgrouper" conf="default->client"/>

    <dependency rev="3.2" org="cacore" name="csm" conf="default->default"/>
    <dependency rev="1.2.7" org="springframework" name="spring" conf="default->full"/>
    <dependency rev="4.4" org="junit" name="junit" conf="impl-test->default"/>
  </dependencies>
</ivy-module>
