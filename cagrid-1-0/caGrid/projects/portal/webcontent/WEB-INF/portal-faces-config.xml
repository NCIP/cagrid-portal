<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
        "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
        "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">


<faces-config>
    <application>
        <view-handler>org.apache.myfaces.application.jsp.JspTilesViewHandlerImpl</view-handler>
    </application>

    <!-- Spring Integration -->
    <application>
        <variable-resolver>org.springframework.web.jsf.DelegatingVariableResolver</variable-resolver>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <message-bundle>messages</message-bundle>
    </application>

    <managed-bean>
        <managed-bean-name>directoryTabbedPaneBean</managed-bean-name>
        <managed-bean-class>gov.nih.nci.cagrid.portal.web.DirectoryTabbedPaneBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>


    <managed-bean>
        <description>Bean that sets up ALL directory listing</description>
        <managed-bean-name>directory</managed-bean-name>
        <managed-bean-class>gov.nih.nci.cagrid.portal.web.DirectorySetup</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>gridServiceManager</property-name>
            <value>#{gridServiceManager}</value>
        </managed-property>
        <managed-property>
            <property-name>rcManager</property-name>
            <value>#{rcManager}</value>
        </managed-property>
        <managed-property>
            <property-name>pocManager</property-name>
            <value>#{pocManager}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <description>Directory List of services</description>
        <managed-bean-name>services</managed-bean-name>
        <managed-bean-class>gov.nih.nci.cagrid.portal.web.ServicesList</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>gridServiceManager</property-name>
            <value>#{gridServiceManager}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <description>Directory List of centers</description>
        <managed-bean-name>centers</managed-bean-name>
        <managed-bean-class>gov.nih.nci.cagrid.portal.web.CenterList</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>rcManager</property-name>
            <value>#{rcManager}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <description>Directory List of people</description>
        <managed-bean-name>people</managed-bean-name>
        <managed-bean-class>gov.nih.nci.cagrid.portal.web.PeopleList</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>pocManager</property-name>
            <value>#{pocManager}</value>
        </managed-property>
    </managed-bean>

    <managed-bean>
        <description>Search Utility</description>
        <managed-bean-name>keywordSearch</managed-bean-name>
        <managed-bean-class>gov.nih.nci.cagrid.portal.web.KeywordSearchSetup</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <managed-bean-name>errorDisplay</managed-bean-name>
        <managed-bean-class>gov.nih.nci.cagrid.portal.web.ErrorDisplayServlet</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <!--Navigation Rules-->
    <navigation-rule>
        <navigation-case>
            <from-action>#{directory.navigateToServicesDirectory}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>servicesDirectory.portal</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{directory.navigateToCenterDirectory}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>rcDirectory.portal</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{directory.navigateToPeopleDirectory}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>pocDirectory.portal</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-action>#{services.navigateToService}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>serviceDetails.portal</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-action>#{center.navigateToCenter}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>centerDetails.portal</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <navigation-case>
            <from-action>#{keywordSearch.navigateToKeywordSearchResults}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>keywordSearchResults.portal</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>