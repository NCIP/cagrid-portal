<?xml version="1.0"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles
       Configuration 1.1//EN"
        "http://struts.apache.org/dtds/tiles-config_1_1.dtd">

<tiles-definitions>

    <!--Base Layouts-->
    <definition name="Base" page="/jsp/layout/PortalBaseLayout.jsp">
        <put name="nciHeader" value="/jsp/header/NCIHeader.jsp"/>
        <put name="portalHeader" value="/jsp/header/PortalHeader.jsp"/>
        <put name="appFooter" value="/jsp/footer/PortalFooter.jsp"/>
        <put name="nciFooter" value="/jsp/footer/NCIFooter.jsp"/>
    </definition>

    <definition name="Homepage" page="/jsp/layout/PortalHomepageLayout.jsp">
        <put name="nciHeader" value="/jsp/header/NCIHeader.jsp"/>
        <put name="portalHeader" value="/jsp/header/PortalHeader.jsp"/>
        <put name="appFooter" value="/jsp/footer/PortalFooter.jsp"/>
        <put name="nciFooter" value="/jsp/footer/NCIFooter.jsp"/>
    </definition>


    <definition name="/home.tiles" extends="Homepage">
        <put name="mainMenu" value="/jsp/menu/MainMenuHome.jsp"/>
        <put name="subMenu" value="/jsp/menu/SubMenuBlank.jsp"/>
        <put name="mainContent" value="/jsp/content/PortalHomepage.jsp"/>
    </definition>

    <!--Directory Section-->
    <definition name="Directory" extends="Base">
        <put name="mainMenu" value="/jsp/menu/MainMenuDirectory.jsp"/>
        <put name="subMenu" value="/jsp/menu/SubMenuDirectory.jsp"/>
        <!--has no content. is a layout-->
    </definition>

    <definition name="/directory.tiles" extends="Directory">
        <put name="mainContent" value="/jsp/content/DirectoryHome.jsp"/>
    </definition>

    <definition name="/servicesDirectory.tiles" extends="Directory">
        <put name="mainContent" value="/jsp/content/DirectoryServices.jsp"/>
    </definition>

    <definition name="/rcDirectory.tiles" extends="Directory">
        <put name="mainContent" value="/jsp/content/DirectoryResearchCenter.jsp"/>
    </definition>

    <definition name="/pocDirectory.tiles" extends="Directory">
        <put name="mainContent" value="/jsp/content/DirectoryPointOfContact.jsp"/>
    </definition>

    <definition name="/serviceDetails.tiles" extends="Directory">
        <put name="mainContent" value="/jsp/content/ServiceDetails.jsp"/>
    </definition>


    <!--End Directory Section-->


    <definition name="/map.tiles" extends="Base">
        <put name="mainMenu" value="/jsp/menu/MainMenuMap.jsp"/>
        <put name="subMenu" value="/jsp/menu/SubMenuMap.jsp"/>
        <put name="mainContent" value="/jsp/menu/SubMenuBlank.jsp"/>
    </definition>

    <definition name="/help.tiles" extends="Base">
        <put name="mainMenu" value="/jsp/menu/MainMenuHelp.jsp"/>
        <put name="subMenu" value="/jsp/menu/SubMenuBlank.jsp"/>
        <put name="mainContent" value="/jsp/menu/SubMenuBlank.jsp"/>
    </definition>

    <definition name="/error.tiles" extends="Base">
        <put name="mainMenu" value="/jsp/menu/MainMenuHome.jsp"/>
        <put name="subMenu" value="/jsp/menu/SubMenuHome.jsp"/>
        <put name="mainContent" value="/jsp/content/Error.jsp"/>
    </definition>


</tiles-definitions>

