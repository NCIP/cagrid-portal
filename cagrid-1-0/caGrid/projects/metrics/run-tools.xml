<project name="run-tools file" basedir="." default="runClient">
	<target name="runClient" depends="checkGlobus, defineClasspaths" description="Run the sample Client">
		<property name="service.url" value="http://localhost:8080/wsrf/services/cagrid/Metrics" />
		<echo message="Connecting to service: ${service.url}" />
		<java classname="org.cagrid.metrics.client.MetricsClient" classpathref="run.classpath" fork="yes">
			<jvmarg value="-DGLOBUS_LOCATION=${ext.globus.dir}" />
			<arg value="-url" />
			<arg value="${service.url}" />
		</java>
	</target>

	<target name="runDriver" depends="checkGlobus, defineClasspaths" description="Run the sample driver">
		<java classname="org.cagrid.metrics.service.TestDriver" classpathref="test.run.classpath" fork="yes" />
	</target>
</project>