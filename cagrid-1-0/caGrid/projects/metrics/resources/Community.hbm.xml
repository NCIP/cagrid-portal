<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.cagrid.metrics.common.Community" table="COMMUNITIES">
		<id name="id" column="community_id">
			<generator class="uuid" />
		</id>
		<property name="name" type="string" not-null="true" />
		<property name="deployment" type="string" />
		 
		<array name="AdditionalDetails" table="COMMUNITY_DETAILS" cascade="all">
			<key column="community_id" />
			<list-index column="sort_order" />
			<many-to-many class="org.cagrid.metrics.common.Detail" column="detail_id"/>
		</array>
	</class>
</hibernate-mapping>