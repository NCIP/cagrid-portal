<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.cagrid.metrics.common.Component" table="COMPONENTS"
		discriminator-value="component">
		<id name="id" column="component_id">
			<generator class="uuid" />
		</id>
		<discriminator column="component_type" type="string"
			length="20" />
		<property name="name" type="string" not-null="true" />
		<property name="version" type="string" />
		 
		<array name="AdditionalDetails" table="COMPONENT_DETAILS" cascade="all">
			<key column="component_id" />
			<list-index column="sort_order" />
			<many-to-many class="org.cagrid.metrics.common.Detail" column="detail_id"/>
		</array>
	
		<subclass name="org.cagrid.metrics.common.Service"
			discriminator-value="service">
			<property name="address" type="text" />
			<property name="namespace" type="text" />
			<property name="identity" type="string" />
		</subclass>
	</class>
</hibernate-mapping>