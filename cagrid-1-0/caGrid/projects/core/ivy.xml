<?xml version="1.0"?>

<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://incubator.apache.org/ivy/schemas/ivy.xsd">

  <info organisation="caGrid" module="core" revision="${project.version}">
    <license name="caGrid" url="http://www.cagrid.org/mwiki/index.php?title=CaGrid:LICENSE-1.1"/>
    <description>The core caGrid project</description>
  </info>

  <configurations>
    <!-- Public Configurations-->
    <conf name="default" visibility="public"/>
    <conf name="ui" visibility="public" extends="default"/>
    <conf name="test" visibility="public" extends="default"/>
  </configurations>


  <publications>
    <artifact name="caGrid-${ivy.module}" conf="default" type="jar"/>
    <artifact name="caGrid-${ivy.module}-resources" conf="ui" type="jar"/>
    <artifact name="caGrid-${ivy.module}-tests" conf="test" type="jar"/>
  </publications>

  <dependencies>
    <!--  TODO: only one class needs Mobius (SimpleResourceManager) in HEAD, and that should just be moved to the projects that need it... then this dependency can be removed altogether -->
    <dependency rev="1.1" org="mobius" name="mobius" conf="*->common-client,tools"/>

    <dependency rev="0.9.9" org="castor" name="castor"/>
    <dependency rev="1.0" org="jdom" name="jdom" conf="default->*"/>
    <dependency rev="2.7" org="clarkware" name="jdepend" conf="test->*"/>
    <dependency rev="2.0.0" org="jgoodies" name="validation" conf="ui->*"/>
  </dependencies>
</ivy-module>
