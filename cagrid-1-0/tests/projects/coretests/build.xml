<project name="caGrid-tests-coretests" default="all" basedir=".">
	<!-- Environment -->
	<property environment="env" />
	<property file="${basedir}/build.properties" />
	<property file="${basedir}/project.properties" />

	<!-- globus -->
	<property name="globus.dir" location="${env.GLOBUS_LOCATION}" />

	<!-- src dirs -->
	<property name="src.dir" location="${basedir}/src/java" />
	<property name="resources.dir" location="${basedir}/src/resources" />
	<property name="test.src.dir" location="${basedir}/test/src/java" />

	<!-- output dirs -->
	<property name="build.dir" location="${basedir}/build" />
	<property name="build.lib.dir" location="${build.dir}/lib" />
	<property name="classes.dir" location="${build.dir}/classes" />
	<property name="test.classes.dir" location="${build.dir}/classes-test" />
	<property name="javadoc.dir" location="${build.dir}/javadoc" />
	<property name="jar.dir" location="${build.dir}/lib" />

	<!-- jars -->
	<property name="project.jarfile" location="${jar.dir}/${ant.project.name}-${project.version}.jar" />
	<property name="project.stubs.jarfile" location="${jar.dir}/${ant.project.name}-stubs-${project.version}.jar" />
	<property name="test.project.jarfile" location="${jar.dir}/${ant.project.name}-tests-${project.version}.jar" />

	<!-- lib locations -->
	<property name="test.lib.dir" location="${basedir}/test/lib" />
	<property name="ext.lib.dir" location="${basedir}/ext/dependencies/jars" />
	<property name="ext.endorsed.dir" location="${basedir}/ext/dependencies/endorsed/jars" />
	<property name="test.ext.lib.dir" location="${basedir}/ext/dependencies/test/jars" />
	<property name="test.log.dir" value="${basedir}/test/logs" />

	<!-- java compiler options -->
	<property name="java.debug" value="on" />
	<property name="java.source" value="1.5" />

	<!-- =============================================================== -->
	<!-- Imports                                                         -->
	<!-- =============================================================== -->
	<import file="test/test.xml" />

	<!-- =============================================================== -->
	<!-- The Build Classpath                                             -->
	<!-- =============================================================== -->
	<path id="build.classpath">
		<fileset dir="${ext.lib.dir}">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${test.ext.lib.dir}">
			<include name="**/junit-4.4.jar" />
		</fileset>
		<fileset dir="${globus.dir}/lib">
			<include name="**/*.jar" />
            <exclude name="junit.jar"/>
		</fileset>
	</path>

	<!-- =============================================================== -->
	<!-- The Build Classpath                                             -->
	<!-- =============================================================== -->
	<path id="test.build.classpath">
		<fileset dir="${ext.lib.dir}">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${test.ext.lib.dir}">
			<include name="**/*.jar" />
		</fileset>
		<path location="${classes.dir}" />
		<path location="${build.stubs.classes}" />
		<fileset dir="${globus.dir}/lib">
			<include name="**/*.jar" />
            <exclude name="junit.jar"/>
		</fileset>
	</path>

	<!-- =============================================================== -->
	<!-- The Test Classpath                                              -->
	<!-- =============================================================== -->
	<path id="test.classpath">
		<fileset dir="${ext.lib.dir}">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${test.ext.lib.dir}">
			<include name="**/*.jar" />
		</fileset>
		<path location="${test.classes.dir}" />
		<path location="${classes.dir}" />
		<path location="${build.stubs.classes}" />
		<fileset dir="${globus.dir}/lib">
			<include name="**/*.jar" />
            <exclude name="junit.jar"/>
		</fileset>
	</path>

	<!-- =============================================================== -->
	<!-- The Run Classpath                                               -->
	<!-- =============================================================== -->
	<path id="run.classpath">
		<fileset dir="${ext.lib.dir}">
			<include name="**/*.jar" />
		</fileset>
	</path>

	<!-- =============================================================== -->
	<!-- Prepares the build directory                                    -->
	<!-- =============================================================== -->
	<target name="prepare">
		<tstamp />
		<mkdir dir="${build.dir}" />
		<mkdir dir="${ext.lib.dir}" />
		<mkdir dir="${test.ext.lib.dir}" />
	</target>


	<!-- =================================================================== -->
	<!-- Compiles the source code                                            -->
	<!-- =================================================================== -->
	<target name="compile" depends="prepare" description="Compiles all the source files.">
		<mkdir dir="${classes.dir}" />
		<javac srcdir="${src.dir}" destdir="${classes.dir}" debug="${java.debug}" source="${java.source}">
			<classpath refid="build.classpath" />
		</javac>
	</target>

	<!-- =================================================================== -->
	<!-- Compiles the test source code                                       -->
	<!-- =================================================================== -->
	<target name="compile-test" depends="prepare" description="Compiles all the test source files.">
		<mkdir dir="${test.classes.dir}" />
		<javac srcdir="${test.src.dir}" destdir="${test.classes.dir}" source="${java.source}" debug="${java.debug}">
			<classpath refid="test.build.classpath" />
		</javac>
	</target>

	<!-- ============================================================== -->
	<!-- Cleans up generated stuff                                      -->
	<!-- ============================================================== -->
	<target name="clean" depends="" description="Removes generated files.">
		<delete dir="${build.dir}" />
	</target>


	<!-- ============================================================== -->
	<!-- Creates the test jar files                                     -->
	<!-- ============================================================== -->
	<target name="jar" depends="compile, compile-test" description="Builds the Jar Files">
		<mkdir dir="${jar.dir}" />
		<jar jarfile="${project.jarfile}">
			<manifest>
				<attribute name="Built-By" value="${user.name}" />
				<attribute name="Main-Class" value="${main.class}" />
			</manifest>
			<fileset dir="${classes.dir}">
				<include name="**/*" />
			</fileset>
			<fileset dir="${src.dir}">
				<include name="**/*.java" />
			</fileset>
			<fileset dir="${resources.dir}">
				<include name="**/*/" />
			</fileset>
		</jar>
		<jar jarfile="${test.project.jarfile}">
			<manifest>
				<attribute name="Built-By" value="${user.name}" />
				<attribute name="Main-Class" value="${main.class}" />
			</manifest>
			<fileset dir="${test.classes.dir}">
				<include name="**/*" />
			</fileset>
			<fileset dir="${test.src.dir}">
				<include name="**/*.java" />
			</fileset>
		</jar>
	</target>

	<!-- ============================================================== -->
	<!-- Creates the javadoc files                                      -->
	<!-- ============================================================== -->
	<target name="javadoc" depends="compile" description="Creates the API documentation.">
		<javadoc packagenames="*" destdir="${javadoc.dir}" author="true" version="true" use="true" windowtitle="${ant.project.name}-${project.version} API">
			<sourcepath>
				<pathelement path="${src.dir}" />
			</sourcepath>
			<classpath>
				<path refid="run.classpath" />
			</classpath>
			<tag name="todo" scope="all" description="To do:" />
			<tag name="created" scope="all" description="Creation Date:" />
		</javadoc>
	</target>

	<!-- ============================================================== -->
	<!-- Builds from scratch                                            -->
	<!-- ============================================================== -->
	<target name="all" description="Builds the entire application" depends="jar" />
</project>