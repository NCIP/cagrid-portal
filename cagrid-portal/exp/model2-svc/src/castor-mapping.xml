<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
                         "http://castor.org/mapping.dtd">
<mapping>
	<description>Model2 XML Mapping</description>

	<class
		name="model2.domain.Chromosome">

		<map-to xml="Chromosome" 
		   ns-uri="http://model2/model"
		   ns-prefix="m"/>

		<field name="id" type="integer">
			<bind-xml name="id" node="attribute" />
		</field>
		
		<field name="name" type="string">
			<bind-xml name="name" node="attribute" />
		</field>

	</class>
	
	<class
		name="model2.domain.Gene">
		
		<map-to xml="Gene" 
			ns-uri="http://model2/model"
			ns-prefix="m"/>
		
		<field name="id" type="integer">
			<bind-xml name="id" node="attribute" />
		</field>
		
		<field name="name" type="string">
			<bind-xml name="name" node="attribute" />
		</field>
		<field name="symbol" type="string">
			<bind-xml name="symbol" node="attribute" />
		</field>
		<field name="clusterId" type="string">
			<bind-xml name="clusterId" node="attribute" />
		</field>
		
	</class>
	
	<class
		name="model2.domain.GeneFunctionTerm">

		<map-to xml="GeneFunctionTerm" 
		   ns-uri="http://model2/model"
		   ns-prefix="m"/>

		<field name="id" type="integer">
			<bind-xml name="id" node="attribute" />
		</field>
		
		<field name="value" type="string">
			<bind-xml name="value" node="attribute" />
		</field>
		
		<field name="level" type="integer">
			<bind-xml name="value" node="attribute" />
		</field>

	</class>
	
	<class
		name="model2.domain.Protein">

		<map-to xml="Protein" 
		   ns-uri="http://model2/model"
		   ns-prefix="m"/>

		<field name="id" type="integer">
			<bind-xml name="id" node="attribute" />
		</field>
		
		<field name="name" type="string">
			<bind-xml name="name" node="attribute" />
		</field>

	</class>
	
	<class
		name="model2.domain.Taxon">

		<map-to xml="Taxon" 
		   ns-uri="http://model2/model"
		   ns-prefix="m"/>

		<field name="id" type="integer">
			<bind-xml name="id" node="attribute" />
		</field>
		
		<field name="value" type="string">
			<bind-xml name="value" node="attribute" />
		</field>
		
		<field name="level" type="integer">
			<bind-xml name="value" node="attribute" />
		</field>

	</class>
	

</mapping>